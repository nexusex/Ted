<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="100dp"
	>
	<ImageView
		android:id="@+id/big_notification_cover"
		android:layout_width="100dp"
		android:layout_height="match_parent"
		android:src="@drawable/svg_disc"
		android:scaleType="centerCrop"
		android:background="@null"
		/>
	<TextView
		android:id="@+id/big_notification_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/big_notification_cover"
		android:layout_toLeftOf="@+id/big_notification_shut"
		android:text="Yellow"
		android:layout_marginLeft="12dp"
		android:layout_marginTop="12dp"
		android:layout_marginRight="12dp"
		android:maxLines="1"
		android:ellipsize="end"
		android:textColor="@color/black"
		android:textSize="16sp"
		android:background="@null"
		/>
	<TextView
		android:id="@+id/big_notification_subtitle"
		android:layout_width="wrap_content"
		android:layout_below="@id/big_notification_title"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/big_notification_cover"
		android:text="Coldplay"
		android:textColor="@color/black"
		android:layout_marginLeft="12dp"
		android:layout_marginRight="12dp"
		android:layout_toLeftOf="@+id/big_notification_shut"
		android:maxLines="1"
		android:ellipsize="end"
		android:layout_marginTop="4dp"
		android:layout_marginBottom="4dp"
		android:singleLine="true"
		android:textSize="12sp"
		android:background="@null"
		/>
	<ImageButton
		android:id="@+id/big_notification_shut"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:src="@drawable/svg_shut"
		android:layout_alignParentRight="true"
		android:background="@null"
		android:foreground="?android:attr/selectableItemBackground"
		/>
	<ProgressBar
		android:id="@+id/big_notification_progress"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/Widget.AppCompat.ProgressBar.Horizontal"
		android:layout_toRightOf="@id/big_notification_cover"
		android:layout_below="@id/big_notification_subtitle"
		android:progressTint="@color/colorPrimary"
		android:background="@null"
		/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_toRightOf="@id/big_notification_cover"
		android:layout_below="@+id/big_notification_progress"
		android:orientation="horizontal"
		android:background="@null"
		>
		<ImageButton
			android:id="@+id/big_notification_previous"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:src="@drawable/svg_previous"
			android:scaleType="centerInside"
			android:background="@null"
			android:padding="4dp"
			android:foreground="?android:attr/selectableItemBackground"
			/>
		<ImageButton
			android:id="@+id/big_notification_switch"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:src="@drawable/svg_pause"
			android:scaleType="centerInside"
			android:background="@null"
			android:padding="4dp"
			android:foreground="?android:attr/selectableItemBackground"
			/>
		<ImageButton
			android:id="@+id/big_notification_next"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:src="@drawable/svg_next"
			android:scaleType="centerInside"
			android:background="@null"
			android:padding="4dp"
			android:foreground="?android:attr/selectableItemBackground"
			/>
		<ImageButton
			android:id="@+id/big_notification_star"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:src="@drawable/svg_star"
			android:scaleType="centerInside"
			android:background="@null"
			android:padding="4dp"
			android:foreground="?android:attr/selectableItemBackground"
			/>
	</LinearLayout>
</RelativeLayout>