<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/item_playing_list_height"
	android:clickable="true"
	android:foreground="?android:attr/selectableItemBackground"
	>
	<TextView
		android:id="@+id/item_bs_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="20sp"
		android:textColor="@color/black"
		android:text="@string/app_name"
		android:layout_marginLeft="24dp"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="4dp"
		android:maxLength="1"
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@+id/item_bs_duration"
		android:layout_marginRight="12dp"
		/>
	<TextView
		android:id="@+id/item_bs_subtitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="12sp"
		android:text="Coldplay"
		android:maxLines="1"
		android:layout_below="@+id/item_bs_title"
		android:layout_marginLeft="24dp"
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@+id/item_bs_duration"
		android:layout_marginRight="12dp"
		/>
	<ImageView
		android:id="@+id/item_bs_headphone"
		android:layout_width="64dp"
		android:layout_height="match_parent"
		android:layout_alignParentRight="true"
		android:src="@drawable/svg_headphone"
		android:scaleType="centerInside"
		/>
	<TextView
		android:id="@+id/item_bs_duration"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="4:23"
		android:textSize="16sp"
		android:textColor="@color/black"
		android:layout_toLeftOf="@+id/item_bs_headphone"
		android:layout_centerVertical="true"
		android:layout_marginRight="16dp"
		/>

</RelativeLayout>